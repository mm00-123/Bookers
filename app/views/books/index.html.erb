<% if flash[:notice] %>
	<p><b><%= flash[:notice] %></b></p>
<% end %>


<h1>Books</h1>

<table>
     <tr>
      <th>Title</th>
      <th>Body</th>
      </tr>
      <% @books.each do |book| %>

      <td><%= book.title %>
      </th>
      </td>
      <td><%= book.body %></td>

      <div class="option">
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit",  edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </div>
      </td>
      </tr>


      <% end %>
</table>

<h3>New book</h3>

<table>
  <thead>
    <%= form_with model:@book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
  </thead>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>